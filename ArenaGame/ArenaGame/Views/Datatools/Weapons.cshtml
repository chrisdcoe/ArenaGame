@model IEnumerable<ArenaGame.Models.Weapon>
@{
    ViewBag.Title = "Weapons";
}

<h2>Weapons</h2>

<p>@Html.ActionLink("Create New", "Create")</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MinDamage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxDamage)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinDamage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxDamage)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ID }) | 
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>

        </tr>
    }
</table>