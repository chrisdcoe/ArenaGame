@model ArenaGame.Models.Weapon
@{
    ViewBag.Title = "Create";
}

<h2>Create a Weapon</h2>

@using (@Html.BeginForm("CreateWeapon", "Weapon"))
{
    <div class="row">
        <div class="col-md-6">Name:</div>
        <div class="col-md-6">@Html.TextBoxFor(x => x.Name)</div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @Html.DropDownListFor(x => x.Species,
            new SelectList(Enum.GetValues(typeof(HogWarsh.Models.Species))),
            "Select Species")
        </div>
    </div>

    <div class="row">
        <div class="col-md-12"><input type="submit" value="Enroll!" /></div>
    </div>
}
